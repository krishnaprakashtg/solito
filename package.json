{
  "name": "solito-with-tailwind",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-native": "^0.72.2",
    "eslint": "^8.21.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "turbo": "^1.4.2",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "native": "cd apps/expo && npm start",
    "web": "cd apps/next && npm run dev",
    "header": "cd apps/header-mfe && npm run dev",
    "footer": "cd apps/footer-mfe && npm run dev",
    "static": "cd apps/static-mfe && npm run dev",
    "root": "cd apps/root-mfe && npm run dev",
    "start-all": "npm-run-all --parallel header footer static root"
  },
  "resolutions": {
    "metro": "~0.76.7",
    "metro-resolver": "~0.76.7"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ]
}
